<%- include('partials/header', { title: 'My Profile' }) %>

<style>
  .profile-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: #f5f5f5;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .card {
    background: white;
    padding: 30px 40px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    text-align: center;
  }

  .card h1 {
    color: #333;
    margin-bottom: 20px;
  }

  .card p {
    font-size: 18px;
    margin: 8px 0;
    color: #555;
  }

  .highlight {
    font-weight: bold;
    color: #007bff;
  }
</style>

<div class="profile-container">
  <div class="card">
    <h1>Hello, <span class="highlight"><%= user.name %></span> ðŸ‘‹</h1>
    <p><strong>ID:</strong> <span class="highlight"><%= user.id %></span></p>
    <p><strong>Email:</strong> <span class="highlight"><%= user.email %></span></p>
  </div>
</div>

